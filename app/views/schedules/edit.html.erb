<%= render "shared/header" %>

<h3>スケジュール編集</h3>
<%= form_with model: @schedule do |f| %>
<table>
    <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
    </tr>
    <tr>
        <th><%= f.label :start_date ,"開始日" %></th>
        <td><%= f.date_select :start_date %></td>
    </tr>
    <tr>
        <th><%= f.label :end_date ,"終了日" %></th>
        <td><%= f.date_select :end_date %></td>
    </tr>
    <tr>
        <th><%= f.label :all_day ,"終日" %></th>
        <td><%= f.check_box :all_day %>
            <p>※終日の場合はチェックを入れます</p>
        </td>
    </tr>
    <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= f.submit "編集を完了する"%></li>
        <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
    </ul>
</div>
<% end %>

<%= render "shared/footer" %>